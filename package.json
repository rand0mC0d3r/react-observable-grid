{
  "name": "react-observable-grid",
  "version": "0.0.1",
  "description": "Â±Infinite grid of React components",
  "main": "lib/index.js",
  "private": false,
  "devDependencies": {
    "@babel/cli": "7.16.0",
    "@babel/core": "7.16.0",
    "@babel/preset-env": "7.16.4",
    "@babel/preset-react": "7.16.0",
    "@babel/types": "7.16.0",
    "babel-eslint": "10.0.3",
    "babel-loader": "8.2.3",
    "concurrently": "^6.4.0",
    "copy-and-watch": "^0.1.6",
    "eslint-plugin-mui-unused-classes": "^1.0.3",
    "npm-check-updates": "12.0.2"
  },
  "dependencies": {
    "@material-ui/core": ">=4.12.3",
    "@material-ui/icons": ">=4.11.2",
    "@react-hook/window-scroll": "^1.3.0",
    "fast-sort": "^3.1.1",
    "prop-types": "^15.7.2",
    "react": ">=17.0.2",
    "react-intersection-observer": "^8.32.5",
    "serve": "13.0.2"
  },
  "files": [
    "LICENSE",
    "*.md",
    "lib",
    "src"
  ],
  "keywords": [
    "reactjs",
    "react",
    "icon",
    "icons",
    "material-ui"
  ],
  "author": "rand0mC0d3r",
  "license": "MIT",
  "scripts": {
    "wipe": "rm -rf package-lock.json && rm -rf ./node_modules && cd sample && rm -rf package-lock.json && rm -rf ./node_modules",
    "postinstall": "npm audit fix && cd sample && npm install",
    "dev": "concurrently \"npm run copy.component\" \"cd sample && npx react-scripts start\"",
    "start": "serve -s build",
    "prebuild": "npm install ./sample && npm run clone.component",
    "build": "rm -rf ./build && cd sample && npx react-scripts build && mv ./build ../",
    "build.lib": "babel ./src -d lib --copy-files",
    "test": "react-scripts test",
    "clone.component": "mkdir -p ./sample/src/components/ && cp -r src/* sample/src/components/",
    "copy.component": "npm run clone.component && copy-and-watch src/* sample/src/components/ --watch",
    "tag": "npm run build.lib && git commit -am 'built next version' && npm version patch && git push && git push --tags",
    "ship": "npm run build && npm publish"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "engines": {
    "node": "^16.0.0",
    "npm": "^7.20.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rand0mC0d3r/react-observable-grid.git"
  },
  "bugs": {
    "url": "https://github.com/rand0mC0d3r/react-observable-grid/issues"
  },
  "homepage": "https://github.com/rand0mC0d3r/react-observable-grid/blob/master/README.md",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
